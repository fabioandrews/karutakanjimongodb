<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup_escolha_dan"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundtatamepopup" >

    <TextView
        android:id="@+id/titulo_popup_escolha_dan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/informe_um_dan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
    	android:textColor="#520206"
    	android:gravity="center"
    	android:background="@drawable/label_rodada_treinamento" />

    <ImageView
        android:id="@+id/dan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iniciante"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/dan1" />

    <ImageView
        android:id="@+id/dan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan1"
        android:layout_toRightOf="@+id/dan1"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan2" />
	<ImageView
        android:id="@+id/dan3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan1"
        android:layout_toRightOf="@+id/dan2"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan3" />
	
	<ImageView
        android:id="@+id/dan4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dan1"
        android:layout_below="@+id/dan1"
        android:layout_marginTop="30dp"
        android:src="@drawable/dan4" />
    
	<ImageView
        android:id="@+id/dan5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan4"
        android:layout_toRightOf="@+id/dan4"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan5" />
	<ImageView
        android:id="@+id/dan6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan4"
        android:layout_toRightOf="@+id/dan5"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan6" />
	
	<ImageView
        android:id="@+id/dan7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dan4"
        android:layout_below="@+id/dan4"
        android:layout_marginTop="30dp"
        android:src="@drawable/dan7" />
	
	<ImageView
        android:id="@+id/dan8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan7"
        android:layout_toRightOf="@+id/dan7"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan8" />
	<ImageView
        android:id="@+id/dan9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dan7"
        android:layout_toRightOf="@+id/dan8"
        android:layout_marginLeft="38dp"
        android:src="@drawable/dan9" />
	
	<ImageView
        android:id="@+id/dan10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dan8"
        android:layout_below="@+id/dan8"
        android:layout_marginTop="30dp"
        android:src="@drawable/dan10" />
	
    <ImageView
        android:id="@+id/iniciante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dan1"
        android:layout_below="@+id/titulo_popup_escolha_dan"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="85dp"
        android:src="@drawable/iniciante" />
    <ImageView
        android:id="@+id/intermediario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_popup_escolha_dan"
        android:layout_alignTop="@+id/iniciante"
        android:layout_toRightOf="@+id/iniciante"
        android:layout_marginLeft="40dp"
        android:src="@drawable/intermediario" />
    
</RelativeLayout>

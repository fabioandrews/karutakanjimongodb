<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup_escolha_duracao"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundtatamepopupmenor" >

    <ListView
        android:id="@+id/listaDuracaoPesquisaSalas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloEscolhaDuracaoPesquisaSalasModoCasual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent" >

    </ListView>
    
	<TextView
    android:id="@+id/tituloEscolhaDuracaoPesquisaSalasModoCasual"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="@string/informe_uma_duracao"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="35sp"
    android:textColor="#520206"
    android:gravity="center"
    android:background="@drawable/label_rodada_treinamento" />
    

</RelativeLayout>

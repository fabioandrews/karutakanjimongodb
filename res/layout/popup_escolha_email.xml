<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup_escolha_email"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundtatamepopupmenormenor" >

	<TextView
    android:id="@+id/tituloEscolhaEmailPesquisaSalasModoCasual"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="@string/informe_um_email"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="35sp"
    android:textColor="#520206"
    android:gravity="center"
    android:background="@drawable/label_rodada_treinamento" />

	<TableLayout
            android:id="@+id/tabela_informe_email_e_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:shrinkColumns="1"
            android:stretchColumns="*"
            android:layout_alignParentLeft="true"
	    	android:layout_below="@+id/tituloEscolhaEmailPesquisaSalasModoCasual"
	    	android:layout_marginTop="40dp">
    <TableRow android:gravity="center_horizontal">
	<TextView
	    android:id="@+id/label_email_pesquisa_sala_modo_casual"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/email_dois_pontos"
	    android:textSize="30sp"
	    android:gravity="right"
	    android:textColor="#520206"  />

	<EditText
	    android:id="@+id/edit_text_informe_email_pesquisar_salas_modo_casual"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:gravity="left"
	    android:layout_marginLeft="10sp"
	    android:background="#d3bc5f"
	     />
	</TableRow>
	</TableLayout>
	
	<Button
    android:id="@+id/confirmar_pesquisa_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tabela_informe_email_e_label"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:text="OK"
    android:textColor="#FFFFFF"
    android:textSize="25sp"
    android:background="@drawable/botaomedio" />

</RelativeLayout>

